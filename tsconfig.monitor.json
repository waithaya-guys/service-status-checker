{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "outDir": "dist",
        "rootDir": ".",
        "noEmit": false,
        "skipLibCheck": true
    },
    "include": [
        "scripts/monitor.ts",
        "lib/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}